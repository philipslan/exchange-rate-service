    "start": "node dist/index.js",
    "build": "npm run clean && npm run build-ts && npm run lint",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/index.js\"",
